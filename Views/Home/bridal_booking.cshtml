            border-collapse: collapse;
            background-color: #ffc0cb; /* Change background color to pinkish (pink) */
        }
        th, td {
            padding: 15px;
            text-align: left;
            border: 1px solid #ddd;
        }
        th {
            background-color: #f2f2f2;
        }
        .nav-link {
            color: #000 !important; /* Set text color to white for the nav-link */
        }
        .navbar-toggler {
            background-color: white;
            overflow: hidden;
            position: relative;
            font-size: 10px;
        }
        .navbar-toggler-text {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 8px;
            color: #000;
        }
        .fixed-buttons {
            position: fixed;
            top: 50%;
            left: 20px;
            transform: translateY(-50%);
            z-index: 1000;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }
        .fixed-buttons a {
            display: inline-block;
            width: 40px;
            height: 40px;
            background-color: #fff; /* Adjust button background color */
            border-radius: 50%;
            text-align: center;
            line-height: 40px;
            font-size: 20px;
            color: #000; /* Adjust button text color */
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            transition: background-color 0.3s ease;
        }
        .fixed-buttons img {
            width: 40px; /* Adjust the width of the logos as needed */
            height: 40px; /* Adjust the height of the logos as needed */
        }
        .fixed-buttons a:hover {
            background-color: #ccc; /* Adjust button background color on hover */
        }
        
    </style>
</head>
