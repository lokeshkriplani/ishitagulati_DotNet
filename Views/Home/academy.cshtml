@{
    ViewData["Title"] = "academy";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ishita Gulati - Academy</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/styles.css">
    <style>
        body {
            font-family: 'Segoe UI', 'Open Sans', 'Helvetica Neue', sans-serif;
            margin: 0;
            padding: 0;
            border-bottom: 100px solid #000;
        }

        .academy-section {
            margin: 5px auto;
            max-width: 1000px;
            padding: 20px;
            border: 1px solid #ddd;
            background-color: #f9f9f9;
        }

        .academy-section h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .academy-section .section {
            margin-bottom: 20px;
            overflow: hidden; /* Add this line to hide overflowing content */
        }

        .academy-section .section .photo-container {
            display: flex;
            flex-direction: row-reverse; /* Display photos from right to left */
            justify-content: flex-start; /* Align photos to the start of the container */
            flex-wrap: wrap; /* Allow photos to wrap to the next line if necessary */
        }

        .academy-section .section .photo-container img {
            max-width: 300px; /* Set the maximum width of the photos */
            height: auto; /* Ensure aspect ratio is maintained */
            margin-right: 10px; /* Add margin between photos */
            margin-bottom: 10px; /* Add margin between rows of photos */
        }

        .fixed-buttons {
            position: fixed;
            top: 50%;
            left: 20px;
            transform: translateY(-50%);
            z-index: 1000;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .fixed-buttons a {
            display: inline-block;
            width: 40px;
            height: 40px;
            background-color: #fff;
            border-radius: 50%;
            text-align: center;
            line-height: 40px;
            font-size: 20px;
            color: #000;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            transition: background-color 0.3s ease;
        }

        .fixed-buttons img {
            width: 40px;
            height: 40px;
        }

        .fixed-buttons a:hover {
            background-color: #ccc;
        }

        .navbar-nav .nav-link {
            color: #000 !important;
        }
    </style>
</head>
<body>


<div class="fixed-buttons">
    <a href="https://www.instagram.com/ishitaagulati/" target="_blank">
        <img src="~/instagram_logo.png" alt="Instagram Logo">
    </a>
    <a href="https://www.facebook.com/ishitaagulatimua" target="_blank">
        <img src="~/facebook_logo.png" alt="Facebook Logo">
    </a>
    <a href="https://www.pinterest.com/ishitaagulati" target="_blank">
        <img src="~/pinterest_logo.png" alt="Pinterest Logo">
    </a>
</div>

<div class="academy-section">
    <h2>Academy</h2>
    <div class="section">
        <h3>Academy Photos</h3>
        <!-- Add your photo gallery or individual photos here -->
        <div class="photo-container">
            <img src="~/academy_photo1.jpg" alt="Academy Photo 1" />
            <img src="~/academy_photo2.jpg" alt="Academy Photo 2" />
            <img src="~/academy_photo3.jpg" alt="Academy Photo 3" />
        </div>
    </div>

    <div class="section">
        <h3>Course Details</h3>
        <!-- Add your course details here -->
        <p>Self Makeup Course:</p>
        <ul>
            <li>Duration: 10 days</li>
            <li>Mode: One-on-one classes</li>
            <li>Schedule: 2 hours each day, 3 days a week</li>
            <li>Batches: Morning batch at 11 am, Evening batch at 3 pm</li>
        </ul>
        <p>Professional Makeup Course:</p>
        <ul>
            <li>Duration: 1 month</li>
            <li>Mode: One-on-one classes</li>
            <li>Schedule: 4 hours each day, 4 days a week</li>
            <li>Batches: Morning batch at 10 am, Evening batch at 2 pm</li>
        </ul>
    </div>

    <div class="section">
        <h3>Charges</h3>
        <!-- Add your charges details here -->
        <p>Self Makeup Course: ₹15,000</p>
        <p>Professional Makeup Course: ₹35,000</p>
    </div>

    <div class="section">
        <h3>Terms and Conditions</h3>
        <!-- Add your terms and conditions here -->
        <p>1. All fees are non-refundable.</p>
        <p>2. Makeup for practice will be provided.</p>
        <p>3. Professional vanity making assistance will be provided.</p>
        <p>4. Certificates are awarded upon completion.</p>
        <p>5. Models for practice will not be provided. Students will practice on each other.</p>
    </div>
</div>

